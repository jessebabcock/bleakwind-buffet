    <UserControl x:Class="PointOfSale.OrderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" Padding="5" TextAlignment="Center" FontWeight="Bold" FontSize="20">
            Bleakwind Buffet Menu
        </TextBlock>
        <Border Name="pageDisplay" Grid.Column="0" Margin="0,15,0,0">
            <local:MenuSelectionComponent></local:MenuSelectionComponent>
        </Border>
        <Border Name="orderSummary" Grid.Column="1">
            <local:OrderSum></local:OrderSum>
        </Border>
    </Grid>
</UserControl>
