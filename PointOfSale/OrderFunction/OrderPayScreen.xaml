    <UserControl x:Class="PointOfSale.OrderFunction.OrderPayScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.OrderFunction"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="620">
    <Grid>
        <TextBlock Margin="80"  Text="How will you be paying?" HorizontalAlignment="Center" FontSize="40"/>
        <Button Margin="0,160,425,170" FontSize="30" Click="CashClick">
            Cash
        </Button>
        <Button Margin="440,160,0,170" FontSize="30" Click="CreditClick">
            Credit
        </Button>
        <Button Margin="220,160,211,170" FontSize="30" Click="DebitClick">
            Debit
        </Button>
        <Button Margin="-1,0,525,394" FontSize="20" Click="CancelClick">
            Cancel
        </Button>
    </Grid>
</UserControl>
