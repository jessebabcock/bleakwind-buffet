    <UserControl x:Class="PointOfSale.OrderSum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <Grid>
        <DockPanel Grid.Column="1" Margin="10,45,10,0">
            <TextBlock Name="orderNum" Grid.Column="1" TextAlignment="Center" DockPanel.Dock="Top" Text="{Binding Path = Num}"/>
            <ListView  Name="orderMenuList" DockPanel.Dock="Top" Height="300"/>
            <StackPanel DockPanel.Dock="Bottom">
                <TextBlock Text="subHolder" Name="subCalc" TextAlignment="Center"/>
                <TextBlock Text="taxHolder" Name="taxCalc" TextAlignment="Center"/>
                <TextBlock Text="totalHolder" Name="totalCalc" TextAlignment="Center"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
