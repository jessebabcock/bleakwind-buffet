    <UserControl x:Class="PointOfSale.OrderSum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="1" Margin="0,45,10,40">
            <TextBlock Name="orderNumber" Grid.Column="1" TextAlignment="Center" DockPanel.Dock="Top">
                Order holder
            </TextBlock>
            <ListView  Name="orderMenuList" DockPanel.Dock="Top" Height="300"/>
            <TextBlock Text="totalHolder" Name="totalCalc" Grid.Column="1" DockPanel.Dock="Bottom" TextAlignment="Center"/>
            <TextBlock Text="taxHolder" Name="taxCalc" Grid.Column="1" DockPanel.Dock="Bottom" TextAlignment="Center"/>
            <TextBlock Text="subHolder" Name="subCalc" Grid.Column="1" DockPanel.Dock="Bottom" TextAlignment="Center"/>
        </DockPanel>
    </Grid>
</UserControl>
